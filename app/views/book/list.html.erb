<% if @books.blank? %>
<p>Sorry,Books Are Not Available.</p>
<% else %>
<p>Available Books:</p>

 <table class="table table-hover table-condensed">
  
     <thead>
       <tr>
           <th>ID</th>
           <th>Book Title</th>
           <%if can? :update,@book%>
           <th>Update</th>
           <th>Delete</th>
            <%end%>
        </tr>   
    </thead>
    <tbody>
   <% @books.each do |b| %>
   <tr><td><%=b.id%></td>
   <td><b><%= link_to b.title, {:action => 'show', :id => b.id} %></b></td>
   <%if can? :update,@book%>
   <td><b> <%= link_to 'Edit', {:action => 'edit', :id => b.id}  %></b></td>
   <td><b> <%= link_to "Delete", {:action => 'delete', :id => b.id},
      :confirm => "Are you sure you want to delete this item?" %></b></td></tr>
    <%end%>  
    <%end%>
</tbody>
</table>
<% end %>

<p><%= link_to "Add New Book", {:action => 'new' }%></p>

<%= will_paginate @books , previous_label:"prev" , next_label:"next",:inner_window=>2,:outer_window=>2 %>

