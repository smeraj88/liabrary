<div class="container">
      
        		<nav class="navbar login_page_nav navbar-fixed-top custom_menu ">
               <div class="navbar-header ">
        		 
              <a class="navbar-brand" href="#">Books Library</a>
              </div>
        	 </nav>
        	
            <div class="jumbotron">
              <h1 class="text-center">Books  Teach Us!!!</h1>
               
                     
              <div class="login_page col-md-4 col-md-offset-4">
              			
                      <h2>Sign Up</h2>
                     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),class:'form_group') do |f| %>
                        <%= devise_error_messages! %>
                        <div class="field">
                         
                          <%= f.input :email, autofocus: true,class:'form-control',label:false,placeholder:'email' %>
                        </div><br>
        
                      <div class="field">
                       <%if @minimum_password_length%>
                        <em>(<%= @minimum_password_length%>charecters minimum)</em>
                        <%end%><br>
                        <%= f.input :password, autocomplete: "off",class:'form-control',label:false,placeholder:'password' %>
                      </div><br>
        
                            <div class="field">
                              <%= f.input :password_confirmation,autocomplete:"off",class:'form-control',label:false,placeholder:'confirm password'%>
                            </div><br>
                         <div class="field">
                            <%= f.input :role,placeholder:" role",label:false,hint:"Role Author/Guest"%>
                         </div> <br>  
                     
                      <div class="field">
                        <%= f.submit "Sign Up" ,class:'form-control btn btn-success'%>
                      </div><br>
                      
                       <%=render "devise/shared/links"%>     
                      
                    <% end %>

                        
                    
                </div>
              </div>
      
               <div class="well custom_footer" >
                      Copyright&nbsp;&copy;&nbsp;2016
              </div>
              
</div>