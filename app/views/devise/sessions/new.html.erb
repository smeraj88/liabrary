            <div class="jumbotron">
              <h1>Books  Teach Us!!!</h1>
               
                     
              <div class="login_page col-md-3">
              			
                      <h2>Log in</h2>
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name),class:'form_group') do |f| %>
                        <div class="field">
                         
                          <%= f.email_field :email, autofocus: true,class:'form-control',placeholder:'email' %>
                        </div><br>
        
                      <div class="field">
                       
                        <%= f.password_field :password, autocomplete: "off",class:'form-control',placeholder:'password' %>
                      </div>
        
                      <% if devise_mapping.rememberable? -%>
                        <div class="field">
                          <%= f.check_box :remember_me,class:'form-check' %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end -%>
        
                      <div class="actions">
                        <%= f.submit "Log in" ,class:'form-control',class:'btn btn-primary'%>&nbsp;<%= link_to 'Forgot Password',edit_user_password_path%>
                      </div><br>
                      
                      <div class="sign_up">
                    <%= link_to 'Sign Up',new_user_registration_path,class:'btn btn-success'%>
                    </div>
        
                    <% end %>
                    
                    
                </div>
              </div>
      
               <div class="well custom_footer" >
                      Copyright&nbsp;&copy;&nbsp;
              </div>
              
       </div>
  

